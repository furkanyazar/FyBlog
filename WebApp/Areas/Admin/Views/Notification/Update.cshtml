@using Entities.Concrete

@model Notification

@{
    ViewData["Title"] = "Bildirim Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Kategori Ekle</h5>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("Update", "Notification", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.Label("Seçenek")
                        @Html.DropDownListFor(x => x.NotificationTypeId, (List<SelectListItem>)ViewBag.Types, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.NotificationTypeId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Açıklama")
                        @Html.TextBoxFor(x => x.NotificationDetail, new { @class = "form-control", @placeholder = "Açıklama" })
                        @Html.ValidationMessageFor(x => x.NotificationDetail, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <button class="btn btn-primary m-t-n-xs" type="submit"><strong>Kaydet</strong></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
