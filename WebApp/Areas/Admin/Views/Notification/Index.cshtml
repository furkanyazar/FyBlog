@using Entities.Concrete

@model List<Notification>

@{
    ViewData["Title"] = "Bildirimler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="ibox">
			<div class="ibox-title">
				<h5>Bildirimler</h5>
			</div>
			<div class="ibox-content">
				<table class="table table-hover">
					<thead>
						<tr>
							<th class="align-middle">Seçenek</th>
							<th class="align-middle">Açıklama</th>
							<th class="align-middle">Durum</th>
							<th class="align-middle"><a href="/Admin/Notification/Add" class="btn btn-success">Yeni Ekle</a></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td class="align-middle">@item.NotificationType.NotificationTypeName</td>
								<td class="align-middle">@item.NotificationDetail</td>
								<td class="align-middle">
									<a href="/Admin/Notification/Delete/@item.NotificationId">
										<span class="badge @{
												switch (item.NotificationStatus)
												{
													case true:
														Write("badge-primary");
														break;
													default:
														Write("badge-danger");
														break;
												}
												}">
											@{
												switch (item.NotificationStatus)
												{
													case true:
														Write("Aktif");
														break;
													default:
														Write("Pasif");
														break;
												}
											}
										</span>
									</a>
								</td>
								<td class="align-middle">
									<a href="/Admin/Notification/Update/@item.NotificationId" class="btn btn-warning">Düzenle</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
