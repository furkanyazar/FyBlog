@using Entities.Concrete

@model Category

@{
	ViewData["Title"] = "Kategori Güncelle";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="ibox ">
			<div class="ibox-title">
				<h5>Kategori Ekle</h5>
			</div>
			<div class="ibox-content">
				@using (Html.BeginForm("Update", "Category", FormMethod.Post))
				{
					@Html.HiddenFor(x => x.CategoryId)
					<div class="form-group">
						@Html.Label("Kategori Adı")
						@Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @placeholder = "Kategori Adı" })
						@Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Kategori Açıklaması")
						@Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", @placeholder = "Kategori Açıklaması", @rows = "5" })
						@Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
					</div>
					<div>
						<button class="btn btn-primary m-t-n-xs" type="submit"><strong>Kaydet</strong></button>
					</div>
				}
			</div>
		</div>
	</div>
</div>
