@using Entities.Concrete

@model List<Category>

@{
	ViewData["Title"] = "Kategoriler";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="ibox">
			<div class="ibox-title">
				<h5>Kategoriler</h5>
			</div>
			<div class="ibox-content">
				<table class="table table-hover">
					<thead>
						<tr>
							<th class="align-middle">Kategori</th>
							<th class="align-middle">Açıklama</th>
							<th class="align-middle">Durum</th>
							<th class="align-middle"><a href="/Admin/Category/Add" class="btn btn-success">Yeni Ekle</a></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td class="align-middle">@item.CategoryName</td>
								<td class="align-middle">@item.CategoryDescription</td>
								<td class="align-middle">
									<a href="/Admin/Category/Delete/@item.CategoryId">
										<span class="badge @{
												switch (item.CategoryStatus)
												{
													case true:
														Write("badge-primary");
														break;
													default:
														Write("badge-danger");
														break;
												}
												}">
											@{
												switch (item.CategoryStatus)
												{
													case true:
														Write("Aktif");
														break;
													default:
														Write("Pasif");
														break;
												}
											}
										</span>
									</a>
								</td>
								<td class="align-middle">
									<a href="/Admin/Category/Update/@item.CategoryId" class="btn btn-warning">Düzenle</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
