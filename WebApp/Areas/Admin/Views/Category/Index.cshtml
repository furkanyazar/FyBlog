@using Entities.Concrete

@model List<Category>

@{
	ViewData["Title"] = "Kategoriler";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="ibox">
			<div class="ibox-title">
				<h5>Kategoriler</h5>
			</div>
			<div class="ibox-content">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Kategori</th>
							<th>Açıklama</th>
							<th>Durum</th>
							<th><a href="/Admin/Category/Add" class="btn btn-success">Yeni Ekle</a></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.CategoryId</td>
								<td>@item.CategoryName</td>
								<td>@item.CategoryDescription</td>
								<td>
									<a href="/Admin/Category/Delete/@item.CategoryId">
										<span class="badge @{
												switch (item.CategoryStatus)
												{
													case true:
														Write("badge-primary");
														break;
													default:
														Write("badge-danger");
														break;
												}
												}">
											@{
												switch (item.CategoryStatus)
												{
													case true:
														Write("Aktif");
														break;
													default:
														Write("Pasif");
														break;
												}
											}
										</span>
									</a>
								</td>
								<td>
									<a href="/Admin/Category/Update/@item.CategoryId" class="btn btn-warning">Düzenle</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
