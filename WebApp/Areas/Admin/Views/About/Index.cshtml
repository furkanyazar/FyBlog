@using Entities.Concrete

@model List<About>

@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Hakkımızda</h5>
            </div>
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="align-middle">Başlık</th>
                            <th class="align-middle">İçerik</th>
                            <th class="align-middle">Durum</th>
                            <th class="align-middle"><a href="/Admin/About/Add" class="btn btn-success">Yeni Ekle</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.AboutTitle</td>
                                <td class="align-middle">
                                    @if (item.AboutText.Length > 150)
                                    {
                                        Write(item.AboutText.Substring(0, 150) + "...");
                                    }
                                    else
                                    {
                                        Write(item.AboutText);
                                    }
                                </td>
                                <td class="align-middle">
                                    <a href="/Admin/About/Delete/@item.AboutId">
                                        <span class="badge @{
												switch (item.AboutStatus)
												{
													case true:
														Write("badge-primary");
														break;
													default:
														Write("badge-danger");
														break;
												}
												}">
                                            @{
                                                switch (item.AboutStatus)
                                                {
                                                    case true:
                                                        Write("Aktif");
                                                        break;
                                                    default:
                                                        Write("Pasif");
                                                        break;
                                                }
                                            }
                                        </span>
                                    </a>
                                </td>
                                <td class="align-middle">
                                    <a href="/Admin/About/Update/@item.AboutId" class="btn btn-warning">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
