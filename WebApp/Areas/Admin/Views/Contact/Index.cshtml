@using Entities.Concrete

@model List<Contact>

@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>İletişim</h5>
            </div>
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="align-middle">Kimden</th>
                            <th class="align-middle">Konu</th>
                            <th class="align-middle">Tarih</th>
                            <th class="align-middle">Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@if (!item.ContactStatus)
                                    {
                                        Write("font-weight-bold");
                                    }">
                                <td class="align-middle">
                                    <a style="color: #676a6c;" href="/Admin/Contact/Read/@item.ContactId">
                                        @if (!item.ContactStatus)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                        @item.ContactUserFullName
                                    </a>
                                </td>
                                <td class="align-middle"><a style="color: #676a6c;" href="/Admin/Contact/Read/@item.ContactId">@item.ContactSubject</a></td>
                                <td class="align-middle"><a style="color: #676a6c;" href="/Admin/Contact/Read/@item.ContactId">@item.ContactDateOf.ToShortDateString() @item.ContactDateOf.ToShortTimeString()</a></td>
                                <td class="align-middle">
                                    <a style="color: #676a6c;" href="/Admin/Contact/Read/@item.ContactId">
                                        @if (item.ContactMessage.Length > 50)
                                        {
                                            Write(item.ContactMessage.Substring(0, 50) + "...");
                                        }
                                        else
                                        {
                                            Write(item.ContactMessage);
                                        }
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
