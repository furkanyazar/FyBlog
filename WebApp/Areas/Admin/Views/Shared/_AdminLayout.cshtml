				<ul class="nav metismenu" id="side-menu">
					<li class="nav-header">
						@await Component.InvokeAsync("AdminLayoutSidebarProfile", Convert.ToInt32(User.Claims.SingleOrDefault(x => x.Type == "UserId").Value))
