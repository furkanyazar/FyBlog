@using Entities.DTOs

@model UserLoginDto

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Yazar Girişi - FY Blog</title>
	<!-- plugins:css -->
	<link rel="stylesheet" href="/writer/vendors/mdi/css/materialdesignicons.min.css">
	<link rel="stylesheet" href="/writer/vendors/css/vendor.bundle.base.css">
	<!-- endinject -->
	<!-- Plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<!-- endinject -->
	<!-- Layout styles -->
	<link rel="stylesheet" href="/writer/css/style.css">
	<!-- End layout styles -->
	<link rel="shortcut icon" href="/writer/images/favicon.ico" />
</head>
<body>
	<div class="container-scroller">
		<div class="container-fluid page-body-wrapper full-page-wrapper">
			<div class="content-wrapper d-flex align-items-center auth">
				<div class="row flex-grow">
					<div class="col-lg-4 mx-auto">
						<div class="auth-form-light text-left p-5">
							<div class="brand-logo">
								<a asp-controller="Blog" asp-action="Index">
									<img src="/writer/images/logo.png">
								</a>
							</div>
							<h4>Merhaba! Hadi başlayalım</h4>
							<h6 class="font-weight-light">Devam etmek için giriş yap.</h6>
							@using (Html.BeginForm("Writer", "Login", FormMethod.Post, new { @class = "pt-3" }))
							{
								<div class="form-group">
									@Html.TextBoxFor(x => x.UserEmail, new { @type="email", @class = "form-control form-control-lg", @placeholder = "E-posta" })
									@Html.ValidationMessageFor(x => x.UserEmail, "", new { @class = "text-danger" })
								</div>
								<div class="form-group">
									@Html.PasswordFor(x => x.UserPassword, new { @class = "form-control form-control-lg", @placeholder = "Şifre" })
									@Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
								</div>
								<div class="mt-3">
									<button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
								</div>
								<div class="my-2 d-flex justify-content-between align-items-center">
									<div class="form-check">
										<label class="form-check-label text-muted">
											<input type="checkbox" class="form-check-input"> Beni Hatırla
										</label>
									</div>
									<a href="#" class="auth-link text-black">Şifremi Unuttum</a>
								</div>
								<div class="text-center mt-4 font-weight-light">
									Yazar değil misin? <a class="text-primary" asp-controller="Login" asp-action="Index">Geri Dön</a>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
			<!-- content-wrapper ends -->
		</div>
		<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<script src="/writer/vendors/js/vendor.bundle.base.js"></script>
	<!-- endinject -->
	<!-- Plugin js for this page -->
	<!-- End plugin js for this page -->
	<!-- inject:js -->
	<script src="/writer/js/off-canvas.js"></script>
	<script src="/writer/js/hoverable-collapse.js"></script>
	<script src="/writer/js/misc.js"></script>
	<!-- endinject -->
</body>
</html>
