@using Entities.DTOs
@model UserLoginDto

@{
	ViewData["Title"] = "Giriş Yap";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Giriş Yap</h3>
		<div class="row inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index", "Login", FormMethod.Post))
				{
					<div class="form-group">
						@Html.Label("E-posta")
						@Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control", @placeholder = "E-posta", @type = "email" } )
						@Html.ValidationMessageFor(x => x.UserEmail, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Şifre")
						@Html.PasswordFor(x => x.UserPassword, new { @class = "form-control", @placeholder = "Şifre" } )
						@Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
					</div>
					<div class="form-check mb-2">
						<input type="checkbox" class="form-check-input" name="checkMeOut">
						<label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
					<p><a asp-controller="Register" asp-action="Index">Hesabınız yok mu?</a></p>
					<p><a asp-controller="Login" asp-action="Writer">Yazar Girişi</a></p>
				}
			</div>
		</div>
	</div>
</section>
