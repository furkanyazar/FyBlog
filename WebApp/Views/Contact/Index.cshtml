@using Entities.Concrete
@model Contact

@{
	ViewData["Title"] = "İletişim";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<h3 class="tittle">İletişim</h3>
	<p class="sub text-center">Yeni fikirleri tartışmayı seviyoruz</p>
	<div class="contact-map inner-sec">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d200065.39629499044!2d26.939634101100733!3d38.41786068493402!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14bbd862a762cacd%3A0x628cbba1a59ce8fe!2zxLB6bWly!5e0!3m2!1str!2str!4v1650065936079!5m2!1str!2str" class="map" style="border:0" allowfullscreen=""></iframe>
	</div>
	<div class="ad-inf-sec bg-light">
		<div class="container">
			<div class="address row">
				<div class="col-lg-4 address-grid">
					<div class="row address-info">
						<div class="col-md-4 address-left text-center">
							<i class="far fa-map"></i>
						</div>
						<div class="col-md-8 address-right text-left">
							<h6>Adres</h6>
							<p>
								<a href="https://goo.gl/maps/1VF4sae3FHZM1S77A" target="_blank">İzmir, TR</a>
							</p>
						</div>
					</div>
				</div>
				<div class="col-lg-4 address-grid">
					<div class="row address-info">
						<div class="col-md-4 address-left text-center">
							<i class="far fa-envelope"></i>
						</div>
						<div class="col-md-8 address-right text-left">
							<h6>E-posta</h6>
							<p>
								<a href="mailto:furkanyazar9853@gmail.com">furkanyazar9853@gmail.com</a>
							</p>
						</div>
					</div>
				</div>
				<div class="col-lg-4 address-grid">
					<div class="row address-info">
						<div class="col-md-4 address-left text-center">
							<i class="fas fa-mobile-alt"></i>
						</div>
						<div class="col-md-8 address-right text-left">
							<h6>Telefon</h6>
							<p>
								<a href="tel:+905304269853">+90 530 426 9853</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div id="contact" class="contact_grid_right">
			@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
			{
				<div class="row contact_left_grid">
					<div class="col-md-6 con-left">
						<div class="form-group">
							@Html.Label("Ad")
							@Html.TextBoxFor(x => x.ContactUserFullName, new { @class = "form-control", @required = "" })
							@Html.ValidationMessageFor(x => x.ContactUserFullName, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							@Html.Label("E-posta")
							@Html.TextBoxFor(x => x.ContactEmail, new { @class = "form-control", @required = "", @type = "email" })
							@Html.ValidationMessageFor(x => x.ContactEmail, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							@Html.Label("Konu")
							@Html.TextBoxFor(x => x.ContactSubject, new { @class = "form-control", @required = "" })
							@Html.ValidationMessageFor(x => x.ContactSubject, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="col-md-6 con-right">
						<div class="form-group">
							@Html.Label("Mesaj")
							@Html.TextAreaFor(x => x.ContactMessage, new { @id = "textarea", @required = "" })
							@Html.ValidationMessageFor(x => x.ContactMessage, "", new { @class = "text-danger" })
						</div>
						<input class="form-control" type="submit" value="Gönder">
					</div>
				</div>
			}
		</div>
	</div>
</section>
<script>
	$(document).ready(function() {
		let urlParams = new URLSearchParams(window.location.search).get("Status");
		
		if (urlParams) swal("Mesaj gönderildi");
	});
</script>