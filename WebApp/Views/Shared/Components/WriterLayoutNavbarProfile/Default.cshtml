@using Entities.Concrete

@model Writer

<li class="nav-item nav-profile dropdown">
	<a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
		<div class="nav-profile-img">
			<img src="@Model.User.UserImageUrl" alt="image">
		</div>
		<div class="nav-profile-text">
			<p class="mb-1 text-black">@Model.User.UserFirstName @Model.User.UserLastName</p>
		</div>
	</a>
	<div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
		<a class="dropdown-item" asp-controller="Writer" asp-action="Profile" asp-route-userId="@User.Claims.SingleOrDefault(x => x.Type == "UserId").Value">
			<i class="mdi mdi-account mr-2 text-success"></i> Profilim
		</a>
		<div class="dropdown-divider"></div>
		<a class="dropdown-item" asp-controller="Login" asp-action="Logout">
			<i class="mdi mdi-logout mr-2 text-primary"></i> Çıkış Yap
		</a>
	</div>
</li>
