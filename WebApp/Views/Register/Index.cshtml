@using Entities.Concrete
@model User

@{
	ViewData["Title"] = "Kayıt Ol";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index", "Register", FormMethod.Post))
				{
					<div class="form-row">
						<div class="col-md-6 mb-3">
							@Html.Label("Ad")
							@Html.TextBoxFor(x => x.UserFirstName, new { @class = "form-control", @placeholder = "Furkan" } )
							@Html.ValidationMessageFor(x => x.UserFirstName)
						</div>
						<div class="col-md-6 mb-3">
							@Html.Label("Soyad")
							@Html.TextBoxFor(x => x.UserLastName, new { @class = "form-control", @placeholder = "Yazar" } )
							@Html.ValidationMessageFor(x => x.UserLastName)
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							@Html.Label("E-posta")
							@Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control", @placeholder = "furkanyazar9853@gmail.com" } )
							@Html.ValidationMessageFor(x => x.UserEmail)
						</div>
						<div class="form-group col-md-6">
							@Html.Label("Şifre")
							@Html.PasswordFor(x => x.UserPassword, new { @class = "form-control", @placeholder = "Şifre" } )
							@Html.ValidationMessageFor(x => x.UserPassword)
						</div>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p>
						<a href="#" id="terms">Kayıt olarak, şartlarınızı kabul ediyorum</a>
					</p>
				}
			</div>
		</div>
	</div>
</section>
<script>
	$( "#terms" ).click(function() {
		swal("Kayıt olduğunuz e-posta adresi üzerinden spam ölçüsüne varmadan bilgi ve haber e-postaları gönderilecektir. Eğer e-posta bülteninden çıkmak isterseniz e-posta ileti dizisini durdurabilirsiniz. Şifreniz, şifrelenmiş formatta herhangi bir kullanıcının göremeyeceği şekilde saklanmaktadır.");
	});
</script>
