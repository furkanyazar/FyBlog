@using Entities.DTOs

@model UserRegisterDto

@{
	ViewData["Title"] = "Kayıt Ol";
	Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Kayıt Ol</h3>
		<div class="inner-sec">
			<div class="login p-5 bg-light mx-auto mw-100">
				@using (Html.BeginForm("Index", "Register", FormMethod.Post))
				{
					<div class="form-row">
						<div class="col-md-6 mb-3">
							@Html.Label("Ad")
							@Html.TextBoxFor(x => x.UserFirstName, new { @class = "form-control", @placeholder = "Ad" } )
							@Html.ValidationMessageFor(x => x.UserFirstName, "", new { @class = "text-danger" })
						</div>
						<div class="col-md-6 mb-3">
							@Html.Label("Soyad")
							@Html.TextBoxFor(x => x.UserLastName, new { @class = "form-control", @placeholder = "Soyad" } )
							@Html.ValidationMessageFor(x => x.UserLastName, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							@Html.Label("E-posta")
							@Html.TextBoxFor(x => x.UserEmail, new { @class = "form-control", @placeholder = "E-posta", @type = "email" } )
							@Html.ValidationMessageFor(x => x.UserEmail, "", new { @class = "text-danger" })
						</div>
						<div class="form-group col-md-6">
							@Html.Label("Şifre")
							@Html.PasswordFor(x => x.UserPassword, new { @class = "form-control", @placeholder = "Şifre" } )
							@Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
						</div>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
					<p><a asp-controller="Login" asp-action="Index">Zaten hesabınız var mı?</a></p>
					<p><a href="#" id="terms">Kayıt olarak, şartlarımızı kabul etmiş olursunuz</a></p>
				}
			</div>
		</div>
	</div>
</section>
<script>
	$( "#terms" ).click(function() {
		swal("Kayıt Şartları", "Kayıt olduğunuz e-posta adresi üzerinden spam ölçüsüne varmadan bilgi ve haber e-postaları gönderilecektir. Eğer e-posta bülteninden çıkmak isterseniz e-posta ileti dizisini durdurabilirsiniz. Şifreniz, şifrelenmiş formatta herhangi bir kullanıcının göremeyeceği şekilde saklanmaktadır.");
	});
</script>
